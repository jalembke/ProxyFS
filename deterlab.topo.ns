# DEFUSE Distributed Network Topology

set ns [new Simulator]
source tb_compat.tcl

set NODES 5

# Set up the nodes
set nodeNetwork ""
for {set i 0} {$i < $NODES} {incr i} {
	set dfnode($i) [$ns node]
	tb-set-node-os $dfnode($i) Ubuntu1604-STD
	append nodeNetwork "$dfnode($i) "
}
set consensusPlane [$ns make-lan "$nodeNetwork" 1000Mbps 0ms]

$ns rtProto Static

$ns run
